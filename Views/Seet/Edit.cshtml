@model projectMVC.viewModel.SeetsViewModel
@{
    ViewBag.Title = "Edit";
}

<div class="container d-flex align-items-center justify-content-center   " style="margin-top : 118px">

    <div class="col-md-6 col-sm-12 col-12">
        <h2 class="text-center text-success text-capitalize py-4 ">  edit  seet   </h2>

        @using (Html.BeginForm())
        {
            @Html.HiddenFor(s => s.ID)

            <div class="form-group d-flex row">

                @Html.TextBoxFor(a => a.Number, new { @class = " form-control col-12", @placeholder = " Seet Number " })
                @Html.ValidationMessageFor(a => a.Number)
            </div>
            <div class="form-group d-flex row">

                @Html.TextBoxFor(a => a.Cost, new { @class = "form-control col-12", @placeholder = " Seet Cost" })
                @Html.ValidationMessageFor(a => a.Cost)
            </div>

            <div class="form-groupd-flex row">

                @Html.DropDownListFor(s => s.SeetType, new SelectList(Enum.GetValues(typeof(projectMVC.enums.SeetType))), new { @class = "form-controller" })
                @Html.ValidationMessageFor(s => s.SeetType)
            </div>


            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-success my-3 text-capitalize ">  edit </button>
            </div>

        }

    </div>

</div>