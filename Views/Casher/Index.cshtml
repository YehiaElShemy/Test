@model IEnumerable<projectMVC.viewModel.CasherViewModel>
@{
    ViewBag.Title = "Index";
}



@if (ViewBag.type == projectMVC.enums.BussinessType.Coffie)
{
    @Html.Partial("_AdminCoffie")
}
else
{
    @Html.Partial("_AdminWorkspace")

}


<h1 class=" text-success text-center  my-3">  Manage your Casher </h1>


<a class="btn btn-success" href="@Url.Action("Create","Casher")"> Create New Casher </a>


<table class="table table-hover">

    <tr>
        <td scope="col"> Name </td>
        <td scope="col"> Phone </td>
        <td scope="col"> Salary </td>
        <td scope="col"> Job </td>
        <td scope="col"> Adress </td>
        <td scope="col"> User Name </td>
        <td scope="col"> Password </td>

        <td scope="col"> Edit Casher </td>

        <td> Delete Casher</td>

    </tr>
    @foreach (var item in Model)

    {
<tr>
    <td scope="row">@item.Name </td>
    <td> @item.Phone </td>
    <td> @item.Salary </td>
    <td> Casher </td>
    <td> @item.Adress </td>
    <td> @item.CasherUserName </td>
    <td> @item.CasherPassword </td>

    <td>
        <a class="btn btn-primary" href="@Url.Action("Edit","Casher",new {id =item.Id })"> Edit </a>
    </td>

    <td>
        <a class="btn btn-danger" href="@Url.Action("Delete","Casher",new {id =item.Id })"> Delete </a>
    </td>
</tr>
    }
</table>